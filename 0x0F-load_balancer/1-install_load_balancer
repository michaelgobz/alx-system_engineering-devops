#!/usr/bin/env bash
# Configures a new Ubuntu server with a HAproxy load-balancer
# firewall config
sudo ufw allow 1344
sudo ufw enable
MyConfig="\
frontend http_front
    bind *:80
    stats uri /haproxy?stats
    default_backend web-servers
    
backend web-servers
    balance roundrobin
    server 16641-web-01 3.238.134.121:80
    server 16641-web-02 3.239.84.157:80
"
# change ownership
sudo chown -R "$USER":"$USER" /etc/haproxy
sudo chmod -R 755 /etc/haproxy

sudo add-apt-repository ppa:vbernat/haproxy-2.0
sudo apt update
sudo apt install -y haproxy
sudo echo "$MyConfig" >> /etc/haproxy/haproxy.cfg
service haproxy start
